<!DOCTYPE html>
<html>
  <head>
    <title>idp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <% if notice %>
        <p class="alert alert-primary"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p> 
      <% end %>
      <div class="jumbotron m-auto col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
