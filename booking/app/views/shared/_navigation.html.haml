%nav.navbar.navbar-expand-lg.navbar-light.bg-light.mb-5
  .container
    = link_to "Booking Service", root_path, class: "navbar-brand"
    %button.navbar-toggler{"aria-controls" => "navbarNav",
                           "aria-expanded" => "false",
                           "aria-label" => "Toggle navigation",
                           "data-target" => "#navbarNav",
                           "data-toggle" => "collapse",
                           type: "button"}
      %span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse.justify-content-end
      %ul.navbar-nav
        %li.nav-item
          - if cookies[:was_authorized]
            = link_to 'Log out', jwt_logout_request_path, class: "nav-link"
          - else
            = link_to 'Log in', jwt_login_request_path, class: "nav-link"
